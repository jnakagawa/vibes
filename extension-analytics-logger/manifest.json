{
  "manifest_version": 3,
  "name": "Extension Analytics Logger",
  "version": "1.0.0",
  "description": "Automatically captures and displays analytics events from Chrome extensions",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "activeTab",
    "sidePanel",
    "debugger",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  "action": {
    "default_title": "Extension Analytics Logger",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "externally_connectable": {
    "ids": ["*"]
  }
}
